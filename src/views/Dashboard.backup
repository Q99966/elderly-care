          <div class="info-text">
            <span :class="['indicator', isConnected ? 'active' : '']"></span>
            {{ isConnected ? 'å®æ—¶ç›‘æ§é“¾è·¯å·²å»ºç«‹' : 'ç­‰å¾…è®¾å¤‡æ¥å…¥ä¸­...' }}
          </div>
          <button @click="handleConnect" :class="['glow-btn', isConnected ? 'btn-red' : 'btn-blue']">
            {{ isConnected ? 'æ–­å¼€è¿æ¥' : 'æœç´¢è®¾å¤‡' }}
          </button>
